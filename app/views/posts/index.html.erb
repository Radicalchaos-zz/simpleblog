<h1>Blog post</h1>
<% @post.each do |post| %>
   <div class="card card-body card-light p-3">
       <div class="row">
       <div class="col">
    <h3><%= post.title %></h3>
     <p><%= post.body %></p>
     <%= link_to "Read More", post_path(post), :class => 'btn btn-info' %>
   </div>
   </div>
    </div>
<% end %>
